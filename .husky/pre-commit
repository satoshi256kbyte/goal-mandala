#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for linting and formatting
echo "📝 Running lint-staged (ESLint + Prettier)..."
npx lint-staged

# Check if lint-staged failed
if [ $? -ne 0 ]; then
  echo "❌ Lint-staged failed. Please fix the issues and try again."
  exit 1
fi

# Run type checking for all packages
# echo "🔍 Running type checks..."
# pnpm type-check:all

# # Check if type checking failed
# if [ $? -ne 0 ]; then
#   echo "❌ Type checking failed. Please fix the type errors and try again."
#   exit 1
# fi

echo "✅ All pre-commit checks passed!"
