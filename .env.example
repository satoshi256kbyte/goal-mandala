# データベース設定
DATABASE_URL="postgresql://username:password@localhost:5432/goal_mandala_dev"

# AWS設定
AWS_REGION="ap-northeast-1"
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"

# Cognito設定
COGNITO_USER_POOL_ID="your_user_pool_id"
COGNITO_CLIENT_ID="your_client_id"
COGNITO_REGION="ap-northeast-1"

# JWT設定
JWT_SECRET="your_jwt_secret_key"

# Bedrock設定
BEDROCK_REGION="us-east-1"
BEDROCK_MODEL_ID="amazon.nova-micro-v1:0"

# SES設定
SES_REGION="ap-northeast-1"
SES_FROM_EMAIL="noreply@yourdomain.com"

# フロントエンド設定
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_COGNITO_USER_POOL_ID="your_user_pool_id"
NEXT_PUBLIC_COGNITO_CLIENT_ID="your_client_id"

# 開発環境設定
NODE_ENV="development"
PORT="3000"
API_PORT="3001"

# ログレベル
LOG_LEVEL="info"

# Step Functions設定
STEP_FUNCTIONS_STATE_MACHINE_ARN="arn:aws:states:ap-northeast-1:123456789012:stateMachine:TaskGenerationStateMachine"

# CloudFront設定
CLOUDFRONT_DISTRIBUTION_ID="your_distribution_id"

# S3設定
S3_BUCKET_NAME="your-s3-bucket-name"

# Secrets Manager設定
SECRETS_MANAGER_SECRET_NAME="goal-mandala/database"

# 環境識別子
ENVIRONMENT="local"

# Docker Compose設定（ローカル開発用）
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DB="goal_mandala_dev"
POSTGRES_PORT="5432"

# Cognito Local設定（ローカル開発用）
COGNITO_LOCAL_PORT="9229"

# テスト設定
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/goal_mandala_test"

# メール配信設定
EMAIL_REMINDER_TIME="10:00"
EMAIL_REMINDER_TIMEZONE="Asia/Tokyo"

# AI処理設定
AI_PROCESSING_TIMEOUT="900000"  # 15分（ミリ秒）
AI_MAX_RETRIES="3"

# セキュリティ設定
CORS_ORIGIN="http://localhost:3000"
SESSION_SECRET="your_session_secret"

# 監視・ログ設定
CLOUDWATCH_LOG_GROUP="/aws/lambda/goal-mandala"
ENABLE_XRAY_TRACING="false"

# パフォーマンス設定
DB_CONNECTION_POOL_SIZE="10"
LAMBDA_MEMORY_SIZE="512"
LAMBDA_TIMEOUT="30"