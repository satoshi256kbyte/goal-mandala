{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build",
                "type-check"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                "!.next/cache/**",
                "cdk.out/**"
            ],
            "cache": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "cache": true
        },
        "test:coverage": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "cache": true
        },
        "lint": {
            "dependsOn": [],
            "outputs": [],
            "cache": true
        },
        "lint:fix": {
            "dependsOn": [],
            "outputs": [],
            "cache": false
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**/*.d.ts",
                "build/**/*.d.ts"
            ],
            "cache": true
        },
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "format": {
            "dependsOn": [],
            "outputs": [],
            "cache": false
        },
        "format:check": {
            "dependsOn": [],
            "outputs": [],
            "cache": true
        },
        "cdk:synth": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "cdk.out/**"
            ],
            "cache": true
        },
        "cdk:deploy": {
            "dependsOn": [
                "cdk:synth"
            ],
            "outputs": [],
            "cache": false
        },
        "cdk:destroy": {
            "dependsOn": [],
            "outputs": [],
            "cache": false
        },
        "cdk:diff": {
            "dependsOn": [
                "build"
            ],
            "outputs": [],
            "cache": false
        },
        "cdk:synth:dev": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "cdk.out/**"
            ],
            "cache": true
        },
        "cdk:synth:stg": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "cdk.out/**"
            ],
            "cache": true
        },
        "cdk:synth:prod": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "cdk.out/**"
            ],
            "cache": true
        },
        "cdk:synth:all": {
            "dependsOn": [
                "cdk:synth:dev",
                "cdk:synth:stg",
                "cdk:synth:prod"
            ],
            "outputs": [
                "cdk.out/**"
            ],
            "cache": true
        },
        "deploy:dev": {
            "dependsOn": [
                "cdk:synth:dev"
            ],
            "outputs": [],
            "cache": false
        },
        "deploy:stg": {
            "dependsOn": [
                "cdk:synth:stg"
            ],
            "outputs": [],
            "cache": false
        },
        "deploy:prod": {
            "dependsOn": [
                "cdk:synth:prod"
            ],
            "outputs": [],
            "cache": false
        },
        "security:check": {
            "dependsOn": [
                "build",
                "cdk:synth:all"
            ],
            "outputs": [],
            "cache": true
        },
        "ci:validate": {
            "dependsOn": [
                "lint",
                "type-check",
                "test",
                "cdk:synth:all"
            ],
            "outputs": [
                "coverage/**",
                "cdk.out/**"
            ],
            "cache": true
        }
    },
    "globalDependencies": [
        "package.json",
        "pnpm-workspace.yaml",
        "turbo.json",
        ".env",
        ".env.local",
        ".env.example"
    ],
    "globalEnv": [
        "NODE_ENV",
        "AWS_REGION",
        "AWS_PROFILE",
        "CDK_DEFAULT_ACCOUNT",
        "CDK_DEFAULT_REGION",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY"
    ]
}
