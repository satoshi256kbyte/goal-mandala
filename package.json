{
  "name": "goal-mandala",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "曼荼羅目標管理システム - モノレポ構成",
  "engines": {
    "node": ">=23.10.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "pnpm -r --filter @goal-mandala/shared --filter @goal-mandala/backend --filter @goal-mandala/frontend test",
    "test:integration": "pnpm --filter @goal-mandala/frontend test:integration",
    "test:coverage": "pnpm -r --filter @goal-mandala/shared --filter @goal-mandala/backend --filter @goal-mandala/frontend test:coverage",
    "test:backend": "pnpm --filter @goal-mandala/backend test",
    "test:frontend": "pnpm --filter @goal-mandala/frontend test",
    "test:shared": "pnpm --filter @goal-mandala/shared test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "hono@>=4.8.0 <4.9.6": ">=4.9.6",
      "vite@<=5.4.19": ">=5.4.20",
      "hono@<4.9.7": ">=4.9.7"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "monorepo",
    "typescript",
    "react",
    "hono",
    "aws-cdk",
    "mandala-chart",
    "goal-management"
  ],
  "author": "Goal Mandala Team",
  "license": "MIT",
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 200",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
