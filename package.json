{
  "name": "goal-mandala",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "曼荼羅目標管理システム - モノレポ構成",
  "engines": {
    "node": ">=23.10.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean",
    "install:all": "pnpm install",
    "build:all": "pnpm run build",
    "test:all": "pnpm run test",
    "lint:all": "pnpm run lint",
    "type-check:all": "pnpm run type-check",
    "test:integration": "node tools/scripts/integration-test-simple.js",
    "test:integration:full": "node tools/scripts/integration-test-full.js",
    "test:integration:advanced": "node tools/scripts/integration-test.js",
    "test:integration:shell": "bash tools/scripts/integration-test.sh",
    "env:validate": "bash tools/scripts/validate-env.sh",
    "env:validate:node": "node tools/scripts/validate-env.js",
    "env:check": "pnpm run env:validate",
    "sam:start": "bash tools/scripts/sam-local-start.sh",
    "sam:start:debug": "bash tools/scripts/sam-local-start.sh --debug",
    "sam:start:dev": "bash tools/scripts/sam-local-start.sh -e dev",
    "test:integration:sam": "node tools/scripts/integration-test-sam.js",
    "test:integration:sam:simple": "node tools/scripts/integration-test-sam-simple.js",
    "prepare": "husky install",
    "act:pr": "act pull_request",
    "act:push": "act push",
    "act:list": "act -l",
    "act:setup": "cp .env.local.example .env.local && cp .secrets.local.example .secrets.local",
    "act:pr-check": "act pull_request -W .github/workflows/pr-check.yml",
    "act:main-ci": "act push -W .github/workflows/main-ci.yml",
    "act:clean": "docker system prune -f && docker volume prune -f",
    "act:debug": "act pull_request --debug",
    "act:dry-run": "act pull_request --dry-run",
    "act:help": "act --help",
    "act:validate": "bash tools/scripts/validate-act-setup.sh",
    "husky:install": "husky install",
    "husky:test": ".husky/pre-commit",
    "husky:prepare": "husky install",
    "lint-staged:test": "lint-staged",
    "ci:pr": "pnpm run lint && pnpm run type-check && pnpm run test",
    "ci:main": "pnpm run build && pnpm run test:coverage && pnpm run lint && pnpm run type-check",
    "ci:local": "pnpm run ci:pr",
    "ci:validate": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
    "github:pr-check": "act pull_request -W .github/workflows/pr-check.yml",
    "github:main-ci": "act push -W .github/workflows/main-ci.yml",
    "github:validate": "pnpm run act:validate && pnpm run ci:validate",
    "setup:dev": "pnpm install && pnpm run husky:install && pnpm run act:setup",
    "setup:ci": "pnpm install && pnpm run build",
    "quality:check": "pnpm run lint && pnpm run type-check && pnpm run format:check",
    "quality:fix": "pnpm run lint:fix && pnpm run format",
    "cdk:synth": "turbo run cdk:synth",
    "cdk:deploy": "turbo run cdk:deploy",
    "cdk:destroy": "turbo run cdk:destroy",
    "cdk:diff": "turbo run cdk:diff",
    "cdk:bootstrap": "cd packages/infrastructure && npx cdk bootstrap",
    "cdk:list": "cd packages/infrastructure && npx cdk list",
    "cdk:doctor": "cd packages/infrastructure && npx cdk doctor",
    "infra:synth": "pnpm run cdk:synth",
    "infra:deploy": "pnpm run cdk:deploy",
    "infra:destroy": "pnpm run cdk:destroy",
    "infra:diff": "pnpm run cdk:diff",
    "infra:bootstrap": "pnpm run cdk:bootstrap",
    "infra:list": "pnpm run cdk:list",
    "infra:doctor": "pnpm run cdk:doctor",
    "deploy:dev": "cd packages/infrastructure && pnpm run deploy:dev",
    "deploy:stg": "cd packages/infrastructure && pnpm run deploy:stg",
    "deploy:prod": "cd packages/infrastructure && pnpm run deploy:prod",
    "deploy:dev:diff": "cd packages/infrastructure && pnpm run deploy:dev:diff",
    "deploy:stg:diff": "cd packages/infrastructure && pnpm run deploy:stg:diff",
    "deploy:prod:diff": "cd packages/infrastructure && pnpm run deploy:prod:diff",
    "cdk:synth:all": "cd packages/infrastructure && pnpm run cdk:synth:all",
    "cdk:synth:dev": "cd packages/infrastructure && pnpm run cdk:synth:dev",
    "cdk:synth:stg": "cd packages/infrastructure && pnpm run cdk:synth:stg",
    "cdk:synth:prod": "cd packages/infrastructure && pnpm run cdk:synth:prod",
    "cdk:diff:dev": "cd packages/infrastructure && pnpm run cdk:diff:dev",
    "cdk:diff:stg": "cd packages/infrastructure && pnpm run cdk:diff:stg",
    "cdk:diff:prod": "cd packages/infrastructure && pnpm run cdk:diff:prod",
    "security:check": "cd packages/infrastructure && pnpm run security:check",
    "ci:cdk": "cd packages/infrastructure && pnpm run ci:validate",
    "frontend:deploy": "cd packages/infrastructure && pnpm run frontend:deploy",
    "frontend:deploy:dev": "cd packages/infrastructure && pnpm run frontend:deploy:dev",
    "frontend:deploy:stg": "cd packages/infrastructure && pnpm run frontend:deploy:stg",
    "frontend:deploy:prod": "cd packages/infrastructure && pnpm run frontend:deploy:prod",
    "frontend:deploy:build-only": "cd packages/infrastructure && pnpm run frontend:deploy:build-only",
    "frontend:deploy:dry-run": "cd packages/infrastructure && pnpm run frontend:deploy:dry-run",
    "frontend:invalidate": "cd packages/infrastructure && pnpm run frontend:invalidate",
    "frontend:invalidate:dev": "cd packages/infrastructure && pnpm run frontend:invalidate:dev",
    "frontend:invalidate:stg": "cd packages/infrastructure && pnpm run frontend:invalidate:stg",
    "frontend:invalidate:prod": "cd packages/infrastructure && pnpm run frontend:invalidate:prod",
    "cognito:deploy:dev": "cd packages/infrastructure && pnpm run cognito:deploy:dev",
    "cognito:deploy:stg": "cd packages/infrastructure && pnpm run cognito:deploy:stg",
    "cognito:deploy:prod": "cd packages/infrastructure && pnpm run cognito:deploy:prod",
    "cognito:diff:dev": "cd packages/infrastructure && pnpm run cognito:diff:dev",
    "cognito:diff:stg": "cd packages/infrastructure && pnpm run cognito:diff:stg",
    "cognito:diff:prod": "cd packages/infrastructure && pnpm run cognito:diff:prod",
    "cognito:synth:dev": "cd packages/infrastructure && pnpm run cognito:synth:dev",
    "cognito:synth:stg": "cd packages/infrastructure && pnpm run cognito:synth:stg",
    "cognito:synth:prod": "cd packages/infrastructure && pnpm run cognito:synth:prod",
    "cognito:validate": "cd packages/infrastructure && pnpm run cognito:validate",
    "cognito:validate:dev": "cd packages/infrastructure && pnpm run cognito:validate:dev",
    "cognito:validate:stg": "cd packages/infrastructure && pnpm run cognito:validate:stg",
    "cognito:validate:prod": "cd packages/infrastructure && pnpm run cognito:validate:prod"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "monorepo",
    "typescript",
    "react",
    "hono",
    "aws-cdk",
    "mandala-chart",
    "goal-management"
  ],
  "author": "Goal Mandala Team",
  "license": "MIT",
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 200",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
