{
  "name": "@goal-mandala/frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "preview": "vite preview",
    "test": "npm run test:unit:batch1 && npm run test:unit:batch2",
    "test:unit": "npm run test:unit:batch1 && npm run test:unit:batch2",
    "test:unit:batch1": "vitest run --reporter=dot --no-coverage --isolate=true --exclude='**/*.integration.test.*' --run --passWithNoTests src/services/__tests__/progress-calculation-engine.test.ts src/components/mandala/EditModal.test.tsx src/components/common/__tests__/animation-components.test.tsx src/services/__tests__/progress-history-analysis.test.ts src/components/common/ProgressBar.test.tsx src/components/mandala/HistoryPanel.test.tsx src/schemas/goal-form.test.ts",
    "test:unit:batch2": "vitest run --reporter=dot --no-coverage --isolate=true --exclude='**/*.integration.test.*' --run --passWithNoTests src/components/profile/__tests__/ProfileSetupForm.test.tsx src/utils/__tests__/animation-utils.test.ts src/pages/SubGoalEditPage.test.tsx src/hooks/__tests__/useAchievementAnimation.test.tsx src/services/__tests__/progress-data-validator.test.ts src/contexts/ActionContext.test.tsx src/services/__tests__/form-security.test.ts",
    "test:unit:all": "vitest run --reporter=dot --no-coverage --isolate=false --exclude='**/*.integration.test.*' --run --passWithNoTests",
    "test:integration": "vitest run --reporter=dot --no-coverage --config vitest.integration.config.ts --run --passWithNoTests",
    "test:coverage": "vitest run --coverage --reporter=dot --isolate=false --run --passWithNoTests",
    "test:ci": "npm run test:unit",
    "test:coverage:analyze": "npm run test:coverage && tsx scripts/analyze-coverage.ts",
    "test:ui": "vitest --ui",
    "test:e2e": "echo 'E2E tests temporarily disabled'",
    "test:e2e:all-browsers": "echo 'E2E tests temporarily disabled'",
    "test:e2e:ui": "echo 'E2E tests temporarily disabled'",
    "test:e2e:headed": "echo 'E2E tests temporarily disabled'",
    "test:e2e:debug": "echo 'E2E tests temporarily disabled'",
    "test:e2e:subgoal-action": "echo 'E2E tests temporarily disabled'",
    "test:e2e:subgoal-action:ui": "echo 'E2E tests temporarily disabled'",
    "test:e2e:subgoal-action:headed": "echo 'E2E tests temporarily disabled'",
    "test:e2e:ci": "echo 'E2E tests temporarily disabled'",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@goal-mandala/shared": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/dompurify": "^3.2.0",
    "aws-amplify": "^6.0.7",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7",
    "react": "^18.2.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@storybook/addon-docs": "^9.1.9",
    "@storybook/addon-onboarding": "^9.1.9",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.9",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/glob": "^9.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/recharts": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^9.1.9",
    "glob": "^11.0.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
