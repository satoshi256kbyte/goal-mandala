{
  "name": "@goal-mandala/frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "preview": "vite preview",
    "test": "vitest run --reporter=dot --no-coverage --run --passWithNoTests",
    "test:watch": "vitest watch --no-coverage",
    "test:integration": "vitest run --reporter=dot --no-coverage --config vitest.integration.config.ts --run --passWithNoTests",
    "test:coverage": "echo '⚠️  カバレッジ測定は時間がかかります（5-10分）。CI/CDでの実行を推奨します。' && vitest run --coverage --reporter=json --run --passWithNoTests",
    "test:coverage:ci": "vitest run --coverage --reporter=json --run --passWithNoTests",
    "coverage:analyze": "node scripts/coverage-analysis.js",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:trend": "node scripts/coverage-trend.js",
    "coverage:all": "pnpm test:coverage && pnpm coverage:analyze && pnpm coverage:report && pnpm coverage:trend",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 200",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@goal-mandala/shared": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/dompurify": "^3.2.0",
    "aws-amplify": "^6.0.7",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.7",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-window": "^2.2.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@storybook/addon-docs": "^9.1.9",
    "@storybook/addon-onboarding": "^9.1.9",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.9",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/glob": "^9.0.0",
    "@types/lodash": "^4.17.21",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/react-window": "^2.0.0",
    "@types/recharts": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^9.1.9",
    "fast-check": "^4.3.0",
    "glob": "^11.1.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "rollup-plugin-visualizer": "^6.0.3",
    "storybook": "^9.1.10",
    "tailwindcss": "^3.3.6",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^5.4.21",
    "vitest": "^4.0.0"
  }
}
