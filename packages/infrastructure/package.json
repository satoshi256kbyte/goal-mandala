{
  "name": "@goal-mandala/infrastructure",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern='\\.(test|spec)\\.ts$' --testPathIgnorePatterns='integration'",
    "test:integration": "jest --testPathPattern='integration'",
    "test:synth": "jest --testNamePattern='synth'",
    "test:coverage:report": "./scripts/test-coverage.sh",
    "test:cdk:synth": "./scripts/test-synth.sh",
    "clean": "rm -rf dist cdk.out node_modules/.cache coverage",
    "cdk": "npx cdk",
    "cdk:synth": "npx cdk synth",
    "cdk:synth:test": "npx cdk synth --app 'npx ts-node src/index.ts' --context environment=test",
    "cdk:deploy": "npx cdk deploy",
    "cdk:destroy": "npx cdk destroy",
    "cdk:diff": "npx cdk diff",
    "cdk:bootstrap": "npx cdk bootstrap",
    "cdk:list": "npx cdk list",
    "cdk:doctor": "npx cdk doctor",
    "deploy": "pnpm run cdk:deploy",
    "deploy:test": "./scripts/deploy-test.sh",
    "deploy:test:actual": "DEPLOY_ACTUAL=true ./scripts/deploy-test.sh",
    "destroy": "pnpm run cdk:destroy",
    "diff": "pnpm run cdk:diff",
    "synth": "pnpm run cdk:synth",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:stg": "./scripts/deploy.sh stg",
    "deploy:prod": "./scripts/deploy.sh prod",
    "deploy:dev:diff": "./scripts/deploy.sh dev --diff-only",
    "deploy:stg:diff": "./scripts/deploy.sh stg --diff-only",
    "deploy:prod:diff": "./scripts/deploy.sh prod --diff-only",
    "cdk:helper": "./scripts/cdk-helper.sh",
    "cdk:synth:all": "pnpm run cdk:synth:dev && pnpm run cdk:synth:stg && pnpm run cdk:synth:prod",
    "cdk:synth:dev": "npx cdk synth --context environment=dev",
    "cdk:synth:stg": "npx cdk synth --context environment=stg",
    "cdk:synth:prod": "npx cdk synth --context environment=prod",
    "cdk:diff:dev": "npx cdk diff --context environment=dev",
    "cdk:diff:stg": "npx cdk diff --context environment=stg",
    "cdk:diff:prod": "npx cdk diff --context environment=prod",
    "cdk:list:dev": "npx cdk list --context environment=dev",
    "cdk:list:stg": "npx cdk list --context environment=stg",
    "cdk:list:prod": "npx cdk list --context environment=prod",
    "security:check": "pnpm run cdk:synth:all",
    "ci:validate": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run cdk:synth:all",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@goal-mandala/shared": "workspace:*",
    "aws-cdk-lib": "^2.210.0",
    "constructs": "^10.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "^2.210.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.2"
  }
}
