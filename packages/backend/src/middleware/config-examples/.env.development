# 開発環境用設定

# ===========================================
# 基本設定
# ===========================================

NODE_ENV=development
AWS_REGION=ap-northeast-1

# ===========================================
# Cognito設定（開発用）
# ===========================================

COGNITO_USER_POOL_ID=ap-northeast-1_devpool123
COGNITO_CLIENT_ID=dev123client456id789

# ===========================================
# データベース設定（ローカル）
# ===========================================

DATABASE_URL=postgresql://postgres:password@localhost:5432/goal_mandala_dev

# ===========================================
# JWT設定（開発用）
# ===========================================

JWT_SECRET=development-jwt-secret-key-for-local-testing-only-do-not-use-in-production

# ===========================================
# 認証設定（モック認証有効）
# ===========================================

ENABLE_MOCK_AUTH=true
JWT_CACHE_TTL=300

# ===========================================
# モック認証設定
# ===========================================

MOCK_USER_ID=dev-user-001
MOCK_USER_EMAIL=developer@example.com
MOCK_USER_NAME=Development User

# ===========================================
# ログ設定（詳細ログ）
# ===========================================

LOG_LEVEL=DEBUG
ENABLE_SECURITY_AUDIT=false

# ===========================================
# フロントエンド設定
# ===========================================

FRONTEND_URL=http://localhost:5173

# ===========================================
# 開発・デバッグ設定
# ===========================================

DEBUG_MODE=true
VERBOSE_ERROR_LOGGING=true
LOG_REQUESTS=true
MEASURE_PERFORMANCE=true

# ===========================================
# セキュリティ設定（開発環境用）
# ===========================================

CORS_ORIGIN=http://localhost:5173
ENABLE_CSRF_PROTECTION=false
ENABLE_RATE_LIMITING=false
ENABLE_IP_WHITELIST=false

# ===========================================
# 高度な設定
# ===========================================

CLOCK_TOLERANCE=300
REQUIRE_EMAIL_VERIFICATION=false
ALLOWED_TOKEN_USE=access,id
MAX_RETRIES=3
REQUEST_TIMEOUT=10000

# ===========================================
# 監視・メトリクス設定（開発環境用）
# ===========================================

ENABLE_METRICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ALERTS=false
