{
  "name": "@goal-mandala/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "sam local start-api",
    "build": "node esbuild.config.js",
    "build:tsc": "tsc",
    "build:sam": "../../tools/scripts/sam-build.sh",
    "sam:build": "sam build",
    "sam:local": "../../tools/scripts/sam-local-start.sh",
    "sam:deploy": "sam deploy",
    "sam:logs": "sam logs -n ApiFunction --stack-name goal-mandala-api --tail",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern='security'",
    "test:security:watch": "jest --testPathPattern='security' --watch",
    "test:security:coverage": "jest --testPathPattern='security' --coverage",
    "test:integration": "node ../../tools/scripts/integration-test-sam.js",
    "test:integration:simple": "node ../../tools/scripts/integration-test-sam-simple.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 25",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier --write .",
    "seed": "tsx prisma/seed.ts",
    "seed:dev": "tsx prisma/seed.ts dev",
    "seed:test": "tsx prisma/seed.ts test",
    "seed:demo": "tsx prisma/seed.ts demo",
    "seed:help": "tsx prisma/seed.ts --help",
    "migrate:init": "./scripts/migrate-init.sh",
    "migrate:status": "./scripts/migrate-status.sh",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force",
    "migrate:prod": "./scripts/migrate-prod.sh",
    "db:backup": "./scripts/backup-database.sh",
    "db:restore": "./scripts/restore-database.sh",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate:config": "node src/middleware/config-examples/validate-config.js",
    "validate:config:dev": "node src/middleware/config-examples/validate-config.js --env=development",
    "validate:config:prod": "node src/middleware/config-examples/validate-config.js --env=production",
    "docs:auth": "echo 'JWT Authentication Middleware Documentation:' && echo '• Usage Guide: src/middleware/auth-usage-guide.md' && echo '• Environment Setup: src/middleware/auth-environment-example.md' && echo '• Troubleshooting: src/middleware/auth-troubleshooting-guide.md' && echo '• API Documentation: src/middleware/auth-api-documentation.md'",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:validate": "./scripts/validate-schema.sh",
    "db:performance": "tsx scripts/performance-test.ts",
    "migrate:dev": "./scripts/migrate-dev.sh",
    "migrate:status": "./scripts/migrate-status.sh",
    "migrate:rollback": "./scripts/migrate-rollback.sh",
    "migrate:prod": "./scripts/migrate-prod.sh",
    "migrate:prod:dry": "./scripts/migrate-prod.sh --dry-run",
    "backup:create": "./scripts/backup-database.sh",
    "backup:full": "./scripts/backup-database.sh full",
    "backup:schema": "./scripts/backup-database.sh schema",
    "backup:data": "./scripts/backup-database.sh data",
    "backup:all": "./scripts/backup-database.sh all",
    "backup:stats": "./scripts/backup-database.sh stats",
    "backup:cleanup": "./scripts/backup-database.sh cleanup",
    "restore:list": "./scripts/restore-database.sh list",
    "restore:db": "./scripts/restore-database.sh restore",
    "security:check": "./scripts/setup-db-security.sh check",
    "security:recommend": "./scripts/setup-db-security.sh recommend",
    "security:audit": "./scripts/setup-db-security.sh audit",
    "test:migration": "jest tests/migration.test.ts",
    "test:migration:performance": "jest tests/migration-performance.test.ts",
    "test:integration": "./scripts/test-migration-integration.sh",
    "quality:check": "./scripts/check-code-quality.sh",
    "deploy:checklist": "./scripts/deployment-checklist.sh",
    "deploy:ready": "./scripts/deployment-checklist.sh && ./scripts/test-migration-integration.sh && ./scripts/check-code-quality.sh"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.470.0",
    "@aws-sdk/client-secrets-manager": "^3.470.0",
    "@goal-mandala/shared": "file:../shared",
    "@hono/node-server": "^1.3.1",
    "@prisma/client": "^5.7.0",
    "hono": "^4.6.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
